<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.Pacientes.PatientRegisterFragment"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btFinalizarRegistroPaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Finalizar registro"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/svDatosPaciente"
        app:layout_constraintVertical_bias="0.652" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="252dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="NUEVO REGISTRO"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/svDatosPaciente"
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="316dp"
        android:layout_height="338dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etPatientNombre"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="79dp" />

            <EditText
                android:id="@+id/etPatientApe1"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Primer apellido"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="153dp" />

            <EditText
                android:id="@+id/etPatientApe2"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Segundo apellido"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="227dp" />

            <EditText
                android:id="@+id/etPatientDni"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="DNI"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="227dp" />

            <EditText
                android:id="@+id/etPatientFechaNacimiento"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Fecha de nacimiento"
                android:inputType="date|phone"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="299dp" />

            <EditText
                android:id="@+id/etPatientTarjetaSanitaria"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Tarjeta sanitaria"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="299dp" />

            <EditText
                android:id="@+id/etPatientPin"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="PIN"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="369dp" />

            <EditText
                android:id="@+id/etPatientPin2"
                android:layout_width="306dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Repita el PIN"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="369dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>