<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.Farmaceuticos.RegistroFragment"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btFinalizarRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="Finalizar registro"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/svDatosPaciente" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="252dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="29dp"
        android:text="NUEVO REGISTRO"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/svDatosPaciente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/svDatosPaciente"
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="25dp"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toTopOf="@+id/btFinalizarRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="79dp" />

            <EditText
                android:id="@+id/etApellido1"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Primer apellido"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="153dp" />

            <EditText
                android:id="@+id/etApellido2"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Segundo apellido"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="227dp" />

            <EditText
                android:id="@+id/etNumColegiado"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Número de colegiado"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="227dp" />

            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Número de teléfono"
                android:inputType="phone"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="299dp" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Nombre de usuario"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="299dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="308dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="369dp" />

            <EditText
                android:id="@+id/etPassword2"
                android:layout_width="303dp"
                android:layout_height="56dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Repita la contraseña"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="369dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>